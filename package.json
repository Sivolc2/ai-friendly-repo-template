{
  "name": "example-llm-developer-project",
  "version": "1.0.0",
  "description": "A framework for collaborative content creation and management",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "ctx:sync": "python packages/scripts/export_context.py",
    "registry:update": "pnpm ctx:sync",
    "diagrams:generate": "python packages/scripts/generate_diagrams.py",
    "refresh-docs": "pnpm registry:update && pnpm diagrams:generate",
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter=@workspace/frontend",
    "dev:backend": "turbo run dev --filter=@workspace/backend",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "coverage": "turbo run coverage",
    "e2e": "concurrently -k \"pnpm --filter frontend run dev\" \"uvicorn packages.backend.main:app --reload\" \"playwright test\"",
    "reset": "./packages/scripts/reset-ports.sh",
    "dev:clean": "pnpm reset && pnpm dev",
    "setup-env": "./packages/scripts/setup-env.sh",
    "setup-project": "pnpm install && python -m venv .venv && . .venv/bin/activate && pip install -r packages/backend/requirements.txt && pnpm setup-env",
    "ci": "pnpm lint && pnpm typecheck && pnpm test",
    "docs:serve": "mkdocs serve",
    "docs:build": "mkdocs build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.9.0",
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/node": "^22.15.3",
    "concurrently": "^8.2.2",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "turbo": "^1.12.3",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
